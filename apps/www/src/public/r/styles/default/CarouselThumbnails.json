{
  "name": "CarouselThumbnails",
  "type": "registry:example",
  "dependencies": [
    "@vueuse/core"
  ],
  "registryDependencies": [
    "carousel",
    "card"
  ],
  "files": [
    {
      "path": "examples/CarouselThumbnails.vue",
      "content": "<script setup lang=\"ts\">\r\nimport type { CarouselApi } from \"@/registry/default/ui/carousel\"\r\nimport { watchOnce } from \"@vueuse/core\"\r\nimport { ref } from \"vue\"\r\nimport { Card, CardContent } from \"@/registry/default/ui/card\"\nimport { Carousel, CarouselContent, CarouselItem, CarouselNext, CarouselPrevious } from \"@/registry/default/ui/carousel\"\r\n\r\nconst emblaMainApi = ref<CarouselApi>()\r\nconst emblaThumbnailApi = ref<CarouselApi>()\r\nconst selectedIndex = ref(0)\r\n\r\nfunction onSelect() {\r\n  if (!emblaMainApi.value || !emblaThumbnailApi.value)\r\n    return\r\n  selectedIndex.value = emblaMainApi.value.selectedScrollSnap()\r\n  emblaThumbnailApi.value.scrollTo(emblaMainApi.value.selectedScrollSnap())\r\n}\r\n\r\nfunction onThumbClick(index: number) {\r\n  if (!emblaMainApi.value || !emblaThumbnailApi.value)\r\n    return\r\n  emblaMainApi.value.scrollTo(index)\r\n}\r\n\r\nwatchOnce(emblaMainApi, (emblaMainApi) => {\r\n  if (!emblaMainApi)\r\n    return\r\n\r\n  onSelect()\r\n  emblaMainApi.on(\"select\", onSelect)\r\n  emblaMainApi.on(\"reInit\", onSelect)\r\n})\r\n</script>\r\n\r\n<template>\r\n  <div class=\"w-full sm:w-auto\">\r\n    <Carousel\r\n      class=\"relative w-full max-w-xs\"\r\n      @init-api=\"(val) => emblaMainApi = val\"\r\n    >\r\n      <CarouselContent>\r\n        <CarouselItem v-for=\"(_, index) in 10\" :key=\"index\">\r\n          <div class=\"p-1\">\r\n            <Card>\r\n              <CardContent class=\"flex aspect-square items-center justify-center p-6\">\r\n                <span class=\"text-4xl font-semibold\">{{ index + 1 }}</span>\r\n              </CardContent>\r\n            </Card>\r\n          </div>\r\n        </CarouselItem>\r\n      </CarouselContent>\r\n      <CarouselPrevious />\r\n      <CarouselNext />\r\n    </Carousel>\r\n\r\n    <Carousel\r\n      class=\"relative w-full max-w-xs\"\r\n      @init-api=\"(val) => emblaThumbnailApi = val\"\r\n    >\r\n      <CarouselContent class=\"flex gap-1 ml-0\">\r\n        <CarouselItem v-for=\"(_, index) in 10\" :key=\"index\" class=\"pl-0 basis-1/4 cursor-pointer\" @click=\"onThumbClick(index)\">\r\n          <div class=\"p-1\" :class=\"index === selectedIndex ? '' : 'opacity-50'\">\r\n            <Card>\r\n              <CardContent class=\"flex aspect-square items-center justify-center p-6\">\r\n                <span class=\"text-4xl font-semibold\">{{ index + 1 }}</span>\r\n              </CardContent>\r\n            </Card>\r\n          </div>\r\n        </CarouselItem>\r\n      </CarouselContent>\r\n    </Carousel>\r\n  </div>\r\n</template>\r\n",
      "type": "registry:example",
      "target": ""
    }
  ]
}
