{
  "name": "CarouselApi",
  "type": "registry:example",
  "dependencies": [
    "@vueuse/core"
  ],
  "registryDependencies": [
    "carousel",
    "card"
  ],
  "files": [
    {
      "path": "examples/CarouselApi.vue",
      "content": "<script setup lang=\"ts\">\r\nimport type { CarouselApi } from \"@/registry/default/ui/carousel\"\r\nimport { watchOnce } from \"@vueuse/core\"\r\nimport { ref } from \"vue\"\r\nimport { Card, CardContent } from \"@/registry/default/ui/card\"\r\nimport { Carousel, CarouselContent, CarouselItem, CarouselNext, CarouselPrevious } from \"@/registry/default/ui/carousel\"\r\n\r\nconst api = ref<CarouselApi>()\r\nconst totalCount = ref(0)\r\nconst current = ref(0)\r\n\r\nfunction setApi(val: CarouselApi) {\r\n  api.value = val\r\n}\r\n\r\nwatchOnce(api, (api) => {\r\n  if (!api)\r\n    return\r\n\r\n  totalCount.value = api.scrollSnapList().length\r\n  current.value = api.selectedScrollSnap() + 1\r\n\r\n  api.on(\"select\", () => {\r\n    current.value = api.selectedScrollSnap() + 1\r\n  })\r\n})\r\n</script>\r\n\r\n<template>\r\n  <div class=\"w-full sm:w-auto\">\r\n    <Carousel class=\"relative w-full max-w-xs\" @init-api=\"setApi\">\r\n      <CarouselContent>\r\n        <CarouselItem v-for=\"(_, index) in 5\" :key=\"index\">\r\n          <div class=\"p-1\">\r\n            <Card>\r\n              <CardContent class=\"flex aspect-square items-center justify-center p-6\">\r\n                <span class=\"text-4xl font-semibold\">{{ index + 1 }}</span>\r\n              </CardContent>\r\n            </Card>\r\n          </div>\r\n        </CarouselItem>\r\n      </CarouselContent>\r\n      <CarouselPrevious />\r\n      <CarouselNext />\r\n    </Carousel>\r\n\r\n    <div class=\"py-2 text-center text-sm text-muted-foreground\">\r\n      Slide {{ current }} of {{ totalCount }}\r\n    </div>\r\n  </div>\r\n</template>\r\n",
      "type": "registry:example",
      "target": ""
    }
  ]
}
