# Cloudflare Pages Environment Variables
# Copy this file to .env.local and fill in your values

# Build Environment
NODE_ENV=production
VITE_APP_ENV=production

# Site Configuration
VITE_SITE_URL=https://www.shadcn-vue.com
VITE_SITE_NAME="shadcn-vue"
VITE_SITE_DESCRIPTION="Beautifully designed components that you can copy and paste into your apps."

# Analytics (optional)
# VITE_GA_ID=G-XXXXXXXXXX
# VITE_PLAUSIBLE_DOMAIN=shadcn-vue.com

# GitHub (for edit links)
VITE_GITHUB_REPO=unovue/shadcn-vue
VITE_GITHUB_BRANCH=dev

# Build Configuration
VITE_BUILD_TIME="$(date -u +%Y-%m-%dT%H:%M:%SZ)"
VITE_COMMIT_SHA="$(git rev-parse HEAD)"

# Cloudflare specific
CF_PAGES=1
CF_PAGES_BRANCH=$CF_PAGES_BRANCH
CF_PAGES_COMMIT_SHA=$CF_PAGES_COMMIT_SHA
CF_PAGES_URL=$CF_PAGES_URL